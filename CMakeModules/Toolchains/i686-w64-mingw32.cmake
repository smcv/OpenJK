set(GNU_HOST i686-w64-mingw32)
set(CMAKE_SYSTEM_PROCESSOR "i686")

set(COMPILER_PREFIX "${GNU_HOST}-")

set(CMAKE_SYSTEM_NAME "Windows")
set(CMAKE_CROSSCOMPILING TRUE)
set(WIN32 TRUE)
set(MINGW TRUE)

if("$ENV{CC}" STREQUAL "")
	set(CMAKE_C_COMPILER ${COMPILER_PREFIX}gcc CACHE STRING "C compiler")
else()
	set(CMAKE_C_COMPILER $ENV{CC} CACHE STRING "C compiler")
endif()
if("$ENV{CXX}" STREQUAL "")
	set(CMAKE_CXX_COMPILER ${COMPILER_PREFIX}c++ CACHE STRING "C++ compiler")
else()
	set(CMAKE_CXX_COMPILER $ENV{CXX} CACHE STRING "C++ compiler")
endif()
if("$ENV{WINDRES}" STREQUAL "")
	set(CMAKE_RC_COMPILER ${COMPILER_PREFIX}windres CACHE STRING "RC compiler")
else()
	set(CMAKE_RC_COMPILER $ENV{WINDRES} CACHE STRING "RC compiler")
endif()

set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
